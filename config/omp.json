{
  "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
  "palette": {
    "black": "#282a36",
    "red": "#ff5555",
    "green": "#50fa7b",
    "yellow": "#f1fa8c",
    "blue": "#6272a4",
    "magenta": "#bd93f9",
    "cyan": "#8be9fd",
    "white": "#f8f8f2",
    "foreground": "#f8f8f2",
    "background": "#282a36"
  },
  "terminal_background": "p:background",
  "console_title_template": "{{ .UserName }}@{{ .HostName }}",
  "blocks": [
    {
      "alignment": "left",
      "newline": true,
      "segments": [
        {
          "foreground": "p:yellow",
          "style": "plain",
          "template": "{{ .UserName }} ",
          "type": "session"
        },
        {
          "foreground": "p:cyan",
          "style": "plain",
          "properties": {
            "style": "folder"
          },
          "template": "{{ .Path }} ",
          "type": "path"
        },
        {
          "properties": {
            "branch_icon": "",
            "fetch_status": true,
            "fetch_stash_count": true,
            "fetch_worktree_count": true
          },
          "style": "plain",
          "template": "git:({{ if or (.Working.Changed) (.Staging.Changed) }}<p:magenta>{{ .HEAD }}</>{{ else }}<p:green>{{ .HEAD }}</>{{ end }}) ",
          "type": "git"
        },
        {
          "type": "python",
          "style": "plain",
          "template": "{{ if .Venv }}venv:(<p:green>{{ .Venv }}</>){{ end }}"
        }
      ],
      "type": "prompt"
    },
    {
      "alignment": "left",
      "newline": true,
      "segments": [
        {
          "foreground": "p:foreground",
          "properties": {
            "always_enabled": true
          },
          "style": "plain",
          "template": "{{ if gt .Code 0 }}<p:red>({{ .Code }}) </>{{ else }}<p:green>({{ .Code }}) </>{{ end }}> ",
          "type": "status"
        }
      ],
      "type": "prompt"
    }
  ],
  "version": 2
}
