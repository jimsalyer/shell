{
  "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
  "version": 3,
  "final_space": true,
  "palette": {
    "background": "#282a36",
    "black": "#282a36",
    "blue": "#6272a4",
    "cyan": "#8be9fd",
    "foreground": "#f8f8f2",
    "green": "#50fa7b",
    "lightRed": "#ff79c6",
    "magenta": "#bd93f9",
    "red": "#ff5555",
    "white": "#f8f8f2",
    "yellow": "#f1fa8c"
  },
  "console_title_template": "{{ .Folder }}{{ if .Root }} (root){{ end }}",
  "terminal_background": "p:background",
  "blocks": [
    {
      "type": "prompt",
      "alignment": "left",
      "segments": [
        {
          "properties": {
            "style": "folder"
          },
          "template": "{{ .Path }} ",
          "foreground": "p:magenta",
          "type": "path",
          "style": "plain"
        },
        {
          "properties": {
            "fetch_status": true,
            "branch_icon": "",
            "commit_icon": "",
            "tag_icon": "",
            "rebase_icon": "",
            "cherry_pick_icon": "",
            "revert_icon": "",
            "merge_icon": "",
            "no_commits_icon": ""
          },
          "template": "({{ .HEAD }}) ",
          "foreground": "p:cyan",
          "type": "git",
          "style": "plain"
        },
        {
          "template": "{{ if .Venv }}({{ .Venv }}){{ end }} ",
          "foreground": "p:cyan",
          "type": "python",
          "style": "plain"
        }
      ]
    },
    {
      "type": "prompt",
      "alignment": "left",
      "segments": [
        {
          "properties": {
            "always_enabled": true
          },
          "template": "<b>{{ if gt .Code 0 }}<p:red>></>{{ else }}<p:green>></>{{ end }}</b>",
          "foreground": "p:foreground",
          "type": "status",
          "style": "plain"
        }
      ],
      "newline": true
    }
  ]
}
